<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="img/triangle.png" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/dashboard/dashboard.style.css">
    <title>Painel de Controle</title>
</head>
<body>
    <div class="d-flex">
        <%- include('../../components/sidebar/sidebar.ejs') %>
        <main class="d-flex flex-column w-100">
            <%- include('../../components/header/header.ejs', {where: 'Início'}) %>
            <section>
                <div class="alert alert-info w-100 mr-2 ml-2 mt-4 col-md-12 col-11 alert-box" role="alert">
                    <div class="d-flex">
                        <h4 class="alert-heading mr-2 font-weight-bold">Atendimento de Maquina Nº</h4>
                        <h4 class="font-weight-bold">34</h4>
                    </div>
                    <hr>
                    <section>
                        <div class="d-flex">
                            <p class="font-weight-bold mr-1 p-0">Patrimonio:</p>
                            <p class="p-0">3015</p>
                        </div>
                        <div class="d-flex">
                            <p class="font-weight-bold mr-1">Locação:</p>
                            <p>Gabinete 07</p>
                        </div>
                        <div class="d-flex">
                            <p class="font-weight-bold mr-1">Status:</p>
                            <p>Em Manutenção</p>
                        </div>
                        <div>

                        </div>
                    </section>
                    <hr>
                    <div class="d-flex">
                        <p class="mb-0 mr-4 font-weight-bold">Registrado por - Diego Costa</p>
                        <p class="mb-0 ml-4 font-weight-bold">02/05/2019 - 14:46</p>
                    </div>
                </div>
                <!-- Button for first Modal -->
                <i class="fas fa-plus-circle btn-more" data-toggle="modal" data-target="#newAlert"></i>
                <!-- Definindo Atendimento -->
                <div class="modal fade" id="newAlert" tabindex="-1" role="dialog" aria-labelledby="newAlertLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content container-fluid">
                            <div class="modal-header">
                                <h5 class="modal-title" id="newAlertLabel">Definir novo atendimento</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <button type="button" class="btn btn-outline-info font-weight-bold mb-3 w-100" data-toggle="modal" data-target="#forSeveral" data-dismiss="modal">Atendimento Diverso</button>
                                <button type="button" class="btn btn-outline-info font-weight-bold mb-3 w-100" data-dismiss="modal">Atendimento de Maquina</button>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Atendimentos Diversos -->
                <div class="modal fade" id="forSeveral" tabindex="-1" role="dialog" aria-labelledby="forSeveralLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="forSeveralLabel">Definir novo atendimento</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h1>Diversos</h1>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/jquery.3.4.1.js"></script>
    <script src="js/dashboard/main.js" type="module"></script>
</body>
</html>